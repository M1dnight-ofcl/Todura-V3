{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "todura-v3",
  "version": "0.1.0",
  "identifier": "com.todura.v3",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build"
  },
  "app": {
    "windows": [
      {
        "title": "Todura V3",
        "width": 800,
        "height": 600,
        "decorations": false,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/l32.png",
      "icons/l128.png",
      "icons/l256.png",
      "icons/logo.ico"
    ]
  }
}
